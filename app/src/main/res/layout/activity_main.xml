<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="117dp"
            android:layout_height="48dp"
            android:id="@+id/team1Button"
            android:text="Edit Matt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/mybutton"
            android:onClick="goToChoices"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/allChoicesButton"/>
    <Button
            android:layout_width="117dp"
            android:layout_height="48dp"
            android:id="@+id/allChoicesButton"
            android:text="All Choices"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/mybutton"
            android:onClick="goToChoices"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/agreed_choice"/>
    <Button
            android:layout_width="157dp"
            android:layout_height="63dp"
            android:id="@+id/agreeifyButton"
            android:text="Agreeify"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="24sp"
            android:background="@drawable/mybutton" android:onClick="agreeify" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="117dp"
            android:layout_height="48dp"
            android:id="@+id/team2Button"
            android:text="Edit Mazy"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/team1Button"
            android:background="@drawable/mybutton" android:onClick="goToChoices"/>
    <TextView
            android:text="textView"
            android:layout_width="220dp"
            android:layout_height="76dp"
            android:id="@+id/agreed_choice"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="test"
            android:gravity="center"
            android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/agreeifyButton"/>
</android.support.constraint.ConstraintLayout>